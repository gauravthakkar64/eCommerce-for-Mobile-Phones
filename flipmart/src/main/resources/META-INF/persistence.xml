<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="flipmartDB"
		transaction-type="RESOURCE_LOCAL">

		<class>com.flipmart.eao.Color</class>
		<class>com.flipmart.eao.State</class>
		<class>com.flipmart.eao.City</class>
		<class>com.flipmart.eao.Manufacturer</class>
		<class>com.flipmart.eao.Pincode</class>
		<class>com.flipmart.eao.Users</class>
		<class>com.flipmart.eao.Admin</class>
		<class>com.flipmart.eao.Product</class>

		<properties>
			<!-- Configuring The Database Connection Details -->
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /><!-- "com.mysql.jdbc.Driver" -->
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/flipmart" /><!-- "jdbc:mysql://localhost:3306/flipmart" -->
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="root" />


			<!-- <property name="hbm2ddl.auto" value="create" /> <property name="javax.persistence.schema-generation.database.action"  value="drop-and-create" /> -->
		</properties>
	</persistence-unit>
</persistence>
